{
  "manifest_version": 3,
  "name": "Apex Drop Farmer",
  "description": "Apex Drop Farmer",
  "version": "1.0",
  "icons": {
    "16": "icon-16.png",
    "32": "icon-32.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "permissions": [
    "sidePanel",
    "webRequest",
    "declarativeNetRequest",
    "notifications"
  ],
  "action": {
    "default_icon": "icon-48.png",
    "default_title": "Open Apex Drop Farmer",
    "default_popup": "index.html"
  },
  "side_panel": {
    "default_path": "index.html"
  },
  "host_permissions": [
    "*://*.blum.codes/*",
    "*://*.pumpad.io/*",
    "*://*.agent301.org/*",
    "*://*.major.bot/*",
    "*://*.slotcoin.app/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://*.tomarket.ai/*"],
      "js": ["content-script.js"],
      "run_at": "document_start",
      "all_frames": true,
      "match_about_blank": true,
      "match_origin_as_fallback": true,
      "world": "MAIN"
    }
  ],
  "background": {
    "service_worker": "service-worker.js",
    "type": "module"
  },
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "blum_ruleset",
        "enabled": true,
        "path": "blum_rules.json"
      },
      {
        "id": "pumpad_ruleset",
        "enabled": true,
        "path": "pumpad_rules.json"
      }
    ]
  }
}
