{
  "manifest_version": 3,
  "name": "Apex Drop Farmer",
  "description": "Apex Drop Farmer",
  "version": "0.4.6",
  "icons": {
    "16": "icon-16.png",
    "32": "icon-32.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "sidePanel",
    "notifications",
    "webRequest",
    "webNavigation",
    "declarativeNetRequest"
  ],
  "action": {
    "default_icon": "icon-48.png",
    "default_title": "Open Apex Drop Farmer",
    "default_popup": "index.html"
  },
  "side_panel": {
    "default_path": "index.html"
  },
  "background": {
    "service_worker": "service-worker.js",
    "type": "module"
  },
  "host_permissions": ["*://*/*", "wss://*/*"],
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["content-script-world.js"],
      "run_at": "document_start",
      "world": "MAIN",
      "all_frames": true
    },
    {
      "matches": ["*://*/*"],
      "js": ["content-script-isolated.js"],
      "run_at": "document_start",
      "world": "ISOLATED",
      "all_frames": true
    },
    {
      "matches": ["*://*.tomarket.ai/*"],
      "js": ["tomarket-world.js"],
      "run_at": "document_start",
      "world": "MAIN",
      "all_frames": true
    },
    {
      "matches": ["*://*.tomarket.ai/*"],
      "js": ["tomarket-isolated.js"],
      "run_at": "document_start",
      "world": "ISOLATED",
      "all_frames": true
    },

    {
      "matches": ["*://*.notpx.app/*"],
      "js": ["notpixel-world.js"],
      "run_at": "document_start",
      "world": "MAIN",
      "all_frames": true
    },
    {
      "matches": ["*://*.notpx.app/*"],
      "js": ["notpixel-isolated.js"],
      "run_at": "document_start",
      "world": "ISOLATED",
      "all_frames": true
    }
  ],
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "core",
        "enabled": true,
        "path": "rule_resources/core.json"
      },
      {
        "id": "farmers",
        "enabled": true,
        "path": "rule_resources/farmers.json"
      }
    ]
  }
}
