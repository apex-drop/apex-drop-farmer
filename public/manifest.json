{
  "manifest_version": 3,
  "name": "Apex Drop Farmer",
  "description": "Apex Drop Farmer",
  "version": "0.0.9",
  "icons": {
    "16": "icon-16.png",
    "32": "icon-32.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "scripting",
    "sidePanel",
    "webRequest",
    "declarativeNetRequest",
    "notifications"
  ],
  "action": {
    "default_icon": "icon-48.png",
    "default_title": "Open Apex Drop Farmer",
    "default_popup": "index.html"
  },
  "side_panel": {
    "default_path": "index.html"
  },
  "background": {
    "service_worker": "service-worker.js",
    "type": "module"
  },
  "host_permissions": [
    "*://*.major.bot/*",
    "*://*.blum.codes/*",
    "*://*.tomarket.ai/*",
    "*://*.pumpad.io/*",
    "*://*.agent301.org/*",
    "*://*.slotcoin.app/*",
    "*://*.true.world/*",
    "*://*.goatsbot.xyz/*"
  ],
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "user_agent_ruleset",
        "enabled": true,
        "path": "user_agent_rules.json"
      }
    ]
  }
}
